{
    "compilerOptions": {
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noStrictGenericChecks": true,
        "lib": [
            "es2017",
            "dom"
        ],
        "outDir": "../out-tsc/app",
        "target": "es5",
        "module": "commonjs",
        "baseUrl": "",
        "rootDir": "./",
        "paths": {
            "ngx-jsonapi": [ "./src" ]
        },
        "strict": false
    },
    "exclude": [
        "node_modules",
        "**/*/node_modules",
        "src/schematics/src/*/files/**/*"
    ],
    "compileOnSave": false,
    "buildOnSave": false,
    "atom": {
        "rewriteTsconfig": false
    }
}
